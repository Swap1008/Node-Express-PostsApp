<%- include('../header'); -%>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h3 class="alert alert-info">Add User</h3>
    </div>
    <div class="col-2"></div>
</div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <span>
           <% if(message != "") { %>
            <p class="alert alert-danger"><%= message %></p>
            <% } %>
        </span>
        <br>
        <form action="/api/addUser" method="post">
            <div class="form-group">
                <label for="">Name</label>
                <input type="text" name="fname" id="fname" class="form-control" placeholder="Full Name"/>
            </div>
            <div class="form-group">
                <label for="">Email-id</label>
                <input type="email" name="emailid" id="emailid" class="form-control" placeholder="Email"/>
            </div>
            <div class="form-group">
                <label for="">Password</label>
                <input type="password" name="password" id="password" class="form-control" />
            </div>
            <div class="form-group">
               <input type="submit" value="Register" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>


<%- include('../footer'); -%>    