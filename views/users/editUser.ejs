<%- include('../header'); -%>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h3 class="alert alert-info">Edit User</h3>
    </div>
    <div class="col-2"></div>
</div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <span>
           
        </span>
        <br>
        <form action="/api/editUser/<%= user[0].id %>" method="post">
            <div class="form-group">
                <label for="">Name</label>
                <input type="text" name="fname" id="fname" class="form-control" placeholder="Full Name" value="<%= user[0].fname %>"/>
            </div>
            <div class="form-group">
                <label for="">Email-id</label>
                <input type="email" name="emailid" id="emailid" class="form-control" placeholder="Email" value="<%= user[0].emailid %>"/>
            </div>
            <div class="form-group">
                <label for=""><p>Status</p></label>
                <br>
                <input type="radio" name="status" id="status" value="1" <%= user[0].status==1 ? 'checked' : 'unchecked'  %> />  Active                  
                <input type="radio" name="status" id="status" value="0" <%= user[0].status==0 ? 'checked' : 'unchecked' %>/>    In-Active
                
                    
            </div>
            <div class="form-group">
               <input type="submit" value="Update" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>


<%- include('../footer'); -%>    