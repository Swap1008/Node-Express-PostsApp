<%- include('../header'); -%>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h3 class="alert">Posts</h3>
    </div>
    <div class="col-2"></div>
</div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <table class="table">
            
            <tbody>
                <% for(let i=0;i< posts.length;i++ ){ %>
                    <tr>
                        <td><a href="/api/readPost/<%= posts[i].id %>""><%= posts[i].title %></a></td>
                        <td><a href="/api/editPost/<%= posts[i].id %>" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i></a></td>
                        <td><a href="/api/deletePost/<%= posts[i].id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i></a></td>
                    </tr>

                <% } %>
            </tbody>
        </table>
    </div>
    <div class="col-2"></div>
</div>


<%- include('../footer'); -%>    