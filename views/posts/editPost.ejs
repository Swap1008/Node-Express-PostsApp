<%- include('../header'); -%>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <h3 class="alert alert-info"><i class="fas fa-pencil-alt"></i> Edit Posts</h3>
    </div>
    <div class="col-2"></div>
</div>
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <span>
           <% if(message != "") { %>
            <p class="alert alert-danger"><%= message %></p>
            <% } %>
        </span>
        <br>
        <form action="/api/editPost/<%= post[0].id %>" method="post">
            <div class="form-group">
                <label for="">Title</label>
                <input type="text" name="title" id="title" class="form-control" value="<%= post[0].title %>"/>
            </div>
            <div class="form-group">
                <label for="">Author</label>
                <input type="text" name="author" id="author" class="form-control" value="<%= post[0].author %>" />
            </div>
            <div class="form-group">
                <label for="">Body</label>
                <textarea name="body" id="body" cols="30" rows="10" class="form-control" ><%= post[0].body %></textarea>
            </div>
            <div class="form-group">
               <input type="submit" value="Save" class="btn btn-success btn-sm" />
            </div>
        </form>
    </div>
    <div class="col-2"></div>
</div>


<%- include('../footer'); -%>    